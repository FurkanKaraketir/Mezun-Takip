<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameText"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:text="Furkan Karaketir">

            </TextView>

            <Button
                android:id="@+id/downButtton"
                style="@style/Widget.Material3.Button.IconButton.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:icon="@drawable/baseline_keyboard_arrow_down_24">

            </Button>

        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/yearText"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="2023">

        </TextView>

        <TextView
            android:visibility="gone"
            android:id="@+id/cityText"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="İstanbul">

        </TextView>

        <TextView
            android:visibility="gone"
            android:id="@+id/schoolText"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Yıldız Teknik Üniverstesi">

        </TextView>

        <TextView
            android:visibility="gone"
            android:id="@+id/fieldText"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Elektronik ve Haberleşme Mühendisliği">

        </TextView>

        <TextView
            android:visibility="gone"
            android:id="@+id/stateOfGraduationText"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Mezun">

        </TextView>

        <TextView
            android:visibility="gone"
            android:id="@+id/phoneNumberText"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="5511450968">

        </TextView>

        <TextView
            android:visibility="gone"
            android:id="@+id/emailText"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="furkankaraketir2005@gmail.com">

        </TextView>

        <TextView
            android:visibility="gone"
            android:id="@+id/descriptionText"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Ankarada Çalışıyor">

        </TextView>

    </LinearLayout>


</androidx.cardview.widget.CardView>